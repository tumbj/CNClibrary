        <activity android:name=".ui.scanner.BorrowActivity" />
        <activity android:name=".ui.scanner.ReturnActivity" />
        <activity android:name=".ui.scanner.AddActivity" />
        <activity android:name=".ui.home.BookActivity" />
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" />
        <activity
            android:theme="@style/AppTheme.NoActionBar"
            android:name=".ui.login.LoginActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>