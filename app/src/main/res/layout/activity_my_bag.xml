<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.dashboard.MyBagActivity">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/myBagRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textAlignment="center"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="0dp"></androidx.recyclerview.widget.RecyclerView>

    <ProgressBar
        android:id="@+id/my_bag_progress_bar"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/myBagRecyclerView"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.483" />

    <TextView
        android:id="@+id/alert_view"
        android:layout_width="247dp"
        android:layout_height="86dp"
        android:text="TextView"
        android:textColor="#FF0606"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@+id/myBagRecyclerView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.711" />

    <ImageView
        android:id="@+id/out_of_book_view"
        android:layout_width="269dp"
        android:layout_height="418dp"
        app:layout_constraintBottom_toBottomOf="@+id/myBagRecyclerView"
        app:layout_constraintEnd_toEndOf="@+id/myBagRecyclerView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/myBagRecyclerView"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/out_of_storage" />

</androidx.constraintlayout.widget.ConstraintLayout>